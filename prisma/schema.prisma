generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Setting {
  key   String @id
  value String

  @@map("settings")
}

model TvMazeCache {
  endpoint  String   @id
  data      Json
  updatedAt DateTime @map("updated_at")

  @@map("tvmaze_cache")
}

model SeriesImage {
  name     String @id
  imageUrl String @map("image_url")

  @@map("series_images")
}
